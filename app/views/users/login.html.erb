<form action="<%= user_auth_path %>" method="POST" class="forma">

<%= csrf_meta_tags %>
<%= hidden_field_tag :authenticity_token, form_authenticity_token %>

<input type="string" name="user[login]" placeholder="Логин" class="form_element" required>
<input type="password" name="user[password]" placeholder="Пароль" class="form_element" required>
<input type="submit" value="Авторизироватся" class="form_element">

</form>

