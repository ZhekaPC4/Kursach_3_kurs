<h1>Все юзеры</h1>

<ul>
  <% @users.each do |user| %>
    <li>
      <a class="news_title" href="/user/id/<%= user.id %>">
        <%= user.login %>
      </a>
        <p>
          <%= user.name%> 
        </p>
        <p>
          <%= user.role.role%> 
        </p>
    </li>
  <% end %>
</ul>
<h3 class="pagination"> <%= paginate @users %> </h3>